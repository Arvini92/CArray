# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# Matches the exact files either package.jso
[*.cpp]
indent_style = space
indent_size = 2

[*.h]
indent_style = space
indent_size = 2
